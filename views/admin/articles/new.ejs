<%- include ('../../partials/header') %>
    <%- include ('../../partials/navbar') %>

        <div class="container">
            <hr>
            <div class="card">
                <div class="card-header">
                    <h2>Cadastro de Artigo</h2>
                </div>
                <div class="card-body">
                    <form method="POST" action="/articles/new" onsubmit="alertaArtigos(event,this)">
                        <input class="form-control" type="text" name="title"
                            placeholder="Defina o titulo do artigo"><br>
                            <textarea class="form-control" placeholder="Escreva aqui o artigo" name="body" id="article"></textarea><br>
                        <button class="btn btn-success">Cadastrar</button>
                    </form>
                </div>
            </div>
        </div>

        <%- include ('../../partials/footer.ejs') %>

        <script>
                function alertaArtigos(event,submit){

                    if(submit){
                        alert("Você criou uma categoria");
                        submit.submit();
                    }                
        }
        </script>
        <script src="/tinymce/tinymce.min.js"></script>
        <script>

            tinymce.init({
                language:'pt_BR', //Não foi possível usar o package pois não está disponível para free.
                selector:"#article",
                plugins:[
                    'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
                ]
            })

        </script>
        